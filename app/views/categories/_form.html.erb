<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row p-2">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="form-group d-grid gap-2 col-4 mx-auto mt-1 ">
          <%= f.submit(class: "btn btn-outline-light") %>
        </div>
         <% end %>
    </div>
    
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-center" %>
  </div>
</div> 